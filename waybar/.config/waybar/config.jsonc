    "spacing": 8, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "clock#clock1",
        "clock#clock2",
        "clock#clock3",
    ],
    "modules-right": [
        //"custom/media",
        "idle_inhibitor",
        "pulseaudio",
        "power-profiles-daemon",
        "backlight",
        "battery",
        "custom/notification",
        "tray",
        "custom/power"
    ],
