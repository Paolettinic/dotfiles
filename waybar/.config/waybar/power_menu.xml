<!-- A better interface with icons: -->
<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="GtkMenu" id="menu">
        <child>
            <object class="GtkImageMenuItem" id="suspend">
                <property name="label">Suspend</property>
                <property name="use-underline">True</property>
                <child>
                    <object class="GtkImage">
                        <property name="icon-name">system-suspend-symbolic</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkImageMenuItem" id="hibernate">
                <property name="label">Hibernate</property>
                <property name="use-underline">True</property>
                <child>
                    <object class="GtkImage">
                        <property name="icon-name">system-hibernate-symbolic</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkImageMenuItem" id="shutdown">
                <property name="label">Shutdown</property>
                <property name="use-underline">True</property>
                <child>
                    <object class="GtkImage">
                        <property name="icon-name">system-shutdown-symbolic</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkSeparatorMenuItem" id="delimiter1"/>
        </child>
        <child>
            <object class="GtkImageMenuItem" id="reboot">
                <property name="label">Reboot</property>
                <property name="use-underline">True</property>
                <child>
                    <object class="GtkImage">
                        <property name="icon-name">system-reboot-symbolic</property>
                    </object>
                </child>
            </object>
        </child>
    </object>
